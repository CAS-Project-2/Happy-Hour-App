<h1>Edit your cocktail</h1>

<form action='/users/my-cocktails/{{cocktail.id}}/edit' method='POST' />

	<label for="name">Cocktail Name:</label>
	<input class='input' type='text' name='name' value="{{cocktail.name}}" required />

	<label for="alcoholic">Alcoholic?</label>
	<select id="alcoholic" name="alcoholic" required>
		<option selected disabled value="" >Select an Option...</option>
		<option value="Alcoholic">Alcoholic</option>
		<option value="Non alcoholic" >Non Alcoholic</option>
	</select>


	<label for="glass">Glass Type:</label>
	<select id="glass" name="glass">
		<option selected disabled value="Select an option">Select an Option...</option>
		<option value="Brandy snifter">Brandy Snifter</option>
		<option value="Champagne flute">Champagne Flute</option>
		<option value="Cocktail glass">Cocktail Glass</option>
		<option value="Coffee mug">Coffee Mug</option>
		<option value="Collins Glass">Collins Glass</option>
		<option value="Copper Mug">Copper Mug</option>
		<option value="Coupe Glass">Coupe Glass</option>
		<option value="Highball glass">Highball Glass</option>
		<option value="Hurricane glass">Hurricane Glass</option>
		<option value="Jar">Jar</option>
		<option value="Mason jar">Mason Jar</option>
		<option value="Margarita Glass">Margarita Glass</option>
		<option value="Martini Glass">Martini Glass</option>
		<option value="Old-fashioned glass">Old-Fashioned Glass</option>
		<option value="Pint glass">Pint Glass</option>
		<option value="Pitcher">Pitcher</option>
		<option value="Punch bowl">Punch Bowl</option>
		<option value="Shot glass">Shot Glass</option>
		<option value="Whiskey Glass">Whiskey Glass</option>
		<option value="Wine glass">Wine Glass</option>	
	</select>

	</select>

	<textarea name="ingredients" rows="10" cols="30" placeholder="Ingredients and Measures">{{cocktail.ingredients}}</textarea>

	<textarea name="instructions" rows="10" cols="30" placeholder="Instructions">{{cocktail.instructions}}</textarea>

	<label for="owner"></label>
	<input hidden class='input' type='text' name='owner' data-owner-name= "{{user.username}}" value="{{ cocktail.owner}}" readonly />

{{!-- 	<label> Cocktail Image:</label>
  	<input type="file" name="imgUrl" />		
  --}}
	<button class='button is-rounded is-danger' type='submit'>Save</button>

</form>

{{#if errorMessage}}
<p>{{errorMessage}}</p>
{{/if}}