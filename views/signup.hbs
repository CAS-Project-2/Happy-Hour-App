<form action="/users/signup" method="post">

<label for="email"></label>
<input type="text" name="email" unique="true" required="true" placeholder="Email"/>

<label for="username"></label>
<input type="text" name="username" unique="true" required="true" placeholder="Username "/>

<label for="password"></label>
<input type="password" name="password" required="true" placeholder="Password"/>

<label for="favcocktail"></label>
<input type="favcocktail" name="favcocktail" placeholder="Your favourite cocktail"/>

<button type="submit">Signup</button>

</form>

{{#if error}}
<p>{{error.msg}}</p>
{{/if}}